<?xml version="1.0" encoding="utf-8"?>
<!--    Service will only work on apps whose package name is "Android"-->
<!--    The amount of time (in milliseconds) to wait before sending another event.-->
<!--    Allows the service to access UI content (e.g. View trees), required for automation-->
<!--    Description that will be visible to the user on the accessibility screen, taken from-->

<accessibility-service xmlns:android="http://schemas.android.com/apk/res/android"
    android:accessibilityEventTypes="typeWindowStateChanged|typeWindowContentChanged"
    android:packageNames="android"
    android:accessibilityFeedbackType="feedbackGeneric"
    android:notificationTimeout="100"
    android:canRetrieveWindowContent="true"
    android:accessibilityFlags="flagDefault"
    android:description="@string/accessibility_service_description" />
